<MudPaper Elevation="0" Class="mb-2">
    <MudGrid>
        <MudItem Class="d-flex align-center pa-0">
            @if (!String.IsNullOrWhiteSpace(FullName))
            {
                <MudText Typo="Typo.caption">نویسنده :</MudText>
                <UserProfileImage Size=25 UserId="@UserId.ToString()" />
                <MudText Typo="Typo.caption" Class="mx-2">@FullName</MudText>
            }
        </MudItem>
        <MudItem Class="d-flex align-center pa-0">
            @if (PublishDate != null)
            {
                <MudText Typo="Typo.caption"> - انتشار : </MudText>
                <MudText Typo="Typo.caption">@PublishDate.Value.CalcRelativeTime().EnglishToPersianNumbers()</MudText>
            }
        </MudItem>
        <MudItem Class="d-flex align-center pa-0">
            @if (UpdateDate != null)
            {
                <MudText Typo="Typo.caption"> - آخرین ویرایش : </MudText>
                <MudText Typo="Typo.caption">@UpdateDate.Value.CalcRelativeTime().EnglishToPersianNumbers()</MudText>
            }
        </MudItem>
        @* <MudItem Class="d-flex align-center pa-0">
            - تعداد بازدید :
            @if (visitCount > -1)
            {
                <MudText>@(visitCount.ToString().EnglishToPersianNumbers() + " بار")</MudText>
            }
            else
            {
                <MudProgressCircular Size="Size.Small" Color="Color.Primary" />
            }
        </MudItem> *@
    </MudGrid>
</MudPaper>