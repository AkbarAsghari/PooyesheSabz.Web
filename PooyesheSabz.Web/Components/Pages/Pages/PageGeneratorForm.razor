<EditForm Model="Page" Context=PageContext>
    <DataAnnotationsValidator />
    <MudText Typo="Typo.h3">@Title</MudText>
    <MudGrid Spacing="2" Class="my-2">
        <MudItem xs="12" md="6">
            <MudTextField Variant="Variant.Outlined" Label="عنوان" Placeholder="عنوان"
                          @bind-Value="Page.Title" Required />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Variant="Variant.Outlined" Class="mud-ltr" Label="آدرس URL" Placeholder="sample-url"
                          @bind-Value="Page.URL" ReadOnly=@(!(Page.PublishDate == null ||
                          Page.PublishDate.Value.AddHours(3) > DateTime.UtcNow)) Required />
        </MudItem>
        <MudItem xs="12">
            <MudTextField Variant="Variant.Outlined" Lines="3" Label="خلاصه توضیحات" Placeholder="خلاصه توضیحات"
                          @bind-Value="Page.Description" Required />
        </MudItem>
        <MudItem xs="12">
            <TagsInput Tags="@Page.Keywords"></TagsInput>
        </MudItem>
        <MudDivider Class="my-2" />
        <MudItem xs="12">
            <TextEditor @bind-Value=@Page.Body></TextEditor>
        </MudItem>
    </MudGrid>
    <MudDivider Class="my-2" />
    <BaseButton Color=Color.Primary Variant="Variant.Filled" EndIcon=@Icons.Material.Filled.Save EditContext="PageContext" ButtonType="ButtonType.Submit" OnClick=OnValidSubmit>ذخیره</BaseButton>
    <BaseButton Href="Page/MyPages" Variant="Variant.Filled" Color="Color.Secondary" EndIcon=@Icons.Material.Filled.Cancel>انصراف</BaseButton>
</EditForm>