@page "/Page/{*URL}"

<MudContainer MaxWidth="MaxWidth.Large" Class="ck-content">
    @if (_PublishPageDTO != null)
    {
        <MudText Typo="Typo.h1" Class="mb-5">@_PublishPageDTO.Title</MudText>
        <PageSummary FullName="@_PublishPageDTO.Author.FullName" UserId="@_PublishPageDTO.Author.ID"
                     PublishDate="@_PublishPageDTO.PublishDate" UpdateDate="@_PublishPageDTO.UpdateDate" />
        <MudDivider Class="mb-1 mt-2" />
        @((MarkupString)@_PublishPageDTO.Body)

        <MudText Typo="Typo.h5" Class="mt-10 mb-1">کلمات کلیدی</MudText>
        <MudGrid Spacing="1">
            @if (keywords != null)
            {
                @foreach (var item in keywords)
                {
                    <MudItem>
                        <MudButton Href="@("/Tag/"+item)" Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Small">@item</MudButton>
                    </MudItem>
                }
            }
        </MudGrid>
    }
</MudContainer>