@page "/Payments/Callback"

@if (IsVerified == null)
{
    <MudProgressLinear Size="Size.Large" Class="my-10" Color="Color.Primary" Indeterminate />
    <MudText Align="Align.Center">در حال بررسی پرداخت</MudText>
}
else
{
    @if (Success == 1)
    {
        <MudAlert Severity="Severity.Success" ContentAlignment="HorizontalAlignment.Right">
            <MudText>پرداخت با موفقیت انجام شد</MudText>
            <MudText>شناسه پرداخت : @TrackId</MudText>
            <MudText>با تشکر از حمایت شما</MudText>
        </MudAlert>
    }
    else
    {
        <MudAlert Severity="Severity.Error" ContentAlignment="HorizontalAlignment.Right">
            <MudText>پرداخت با شکست مواجه شد</MudText>
            <MudText>شناسه : @TrackId</MudText>
            <MudText>علت : @Result</MudText>
        </MudAlert>
    }
    <BaseButton StartIcon=@Icons.Material.Filled.Home Variant="Variant.Filled" Color="Color.Primary" OnClick="NavigateToHome">
        بازگشت
    </BaseButton>
}

